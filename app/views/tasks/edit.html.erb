<h1>Edit this task:</h1>


<h2><%= @task.title %></h2>
<p><%= @task.details %></p>


<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details %>

  <%= f.label :Done? %>
  <%= f.check_box :completed %>

  <%= f.submit %>
<% end %>
